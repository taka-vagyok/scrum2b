<div ng-repeat="version in versions" >
	<h3 class="title_sprint" ng-class="{'title_sprint_active': isActive(version)}" ng-click="getIssues(version)" > {{version.name}} </h3>	
	<div class="sprint_1 sprint sprint-active clearfix" ng-class="{'active': isActive(version)}">
	  <div class="s2b_column_4 hide_backlog ">
	    <div class="padding_5 ">
	      <div class="border_status">
	        <div class="status_sprint">
	          <span>New Isuse</span>
	          <span class="icon_add_issue">Add</span>
	        </div>
	        <!-- add new issue -->
	        <%= render :partial => "/s2b_issues/add_new_issue" %>
	        <div class="connectedSortable check_height" id="sortable1">
	        	<%= render :partial => "/s2b_issues/issue" %>
	        </div><!--end connectedSortable-->
	      </div><!--end border-->
	    </div><!--end padding 5 -->
	  </div><!--end sprint 1-->
	  <div class="s2b_column_4 hide_backlog">
	    <div class="padding_5">
	    	<div class="border_status">
	        <div class="status_sprint">
	          <span>In Progess</span>
	          <span class="icon_add_issue">Add</span>
	        </div>
	        <%= render :partial => "/s2b_issues/add_new_issue" %>
	        <div class="connectedSortable check_height" id="sortable2" >
	        	<%= render :partial => "/s2b_issues/issue" %>
	        </div><!--end connectedSortable-->  
	      </div><!--end border status-->
	    </div><!--end padding 5 -->
	  </div><!--end sprint 2-->
	  <div class="s2b_column_4 hide_backlog">
	  	<div class="padding_5">
	    	<div class="border_status">
	        <div class="status_sprint">
	          <span>Resolved</span>
	        </div>
	        <div class="connectedSortable check_height" id="sortable3">
	          <%= render :partial => "/s2b_issues/issue" %>
	        </div><!--end connectedSortable-->  
	      </div><!--end padding 5 -->
	    </div><!--end border status-->
	  </div><!--end sprint 3-->
	  <div class="s2b_column_3 issue_closed" id="issue_closed">
	    <div class="padding_5">
	    	<div class="border_status">
	      <div class="status_sprint">
	        <span>Close</span>
	        <span class="closed_issue">Hide</span> 
	      </div>
	      <div class="connectedSortable check_height" id="sortable4">
	        <%= render :partial => "/s2b_issues/issue" %>
	      </div><!--end connectedSortable-->  
	      </div>
	    </div><!--end padding 5 -->
	  </div><!--end sprint 4-->
	  <div class="open_sprint_closed">
	    <span ><%= image_tag('icon-file.png', :plugin => 'scrum2b') %></span>
	  </div>
	</div>
</div>
