<div ng-repeat="version in versions" >
	<h3 class="title_sprint" ng-class="{'title_sprint_active': isActiveVersion(version)}" ng-click="getIssues(version)" > {{version.name}}</h3>	
	<div class="sprint_1 sprint sprint-active clearfix" ng-class="{'active': isActiveVersion(version)}">
	  <div class="s2b_column_4 hide_backlog ">
	    <div class="padding_5 ">
	      <div class="border_status">
	        <div class="status_sprint">
	          <span>New Isuse</span>
	          <span class="icon_add_issue button" ng-click="setParams(statusIds.status_no_start,version.id)"><i class="fa fa-plus-circle"></i>Add</span>
	        </div>
	        <!-- add new issue -->
	        <%= render :partial => "/s2b_issues/add_new_issue" %> 

	        <div class="connectedSortable check_height" status="{{statusIds.status_no_start}}" id="sortable1" sortable >  
          	<div class="issue ui-state-default small_mode" issue-id="{{issue.id}}"  ng-repeat="issue in issuesNew" >
        	  	<%= render :partial => "/s2b_issues/issue" %>
        	  </div>
	        </div><!--end connectedSortable-->
	      </div><!--end border-->
	    </div><!--end padding 5 -->
	  </div><!--end sprint 1-->
	  <div class="s2b_column_4 hide_backlog">
	    <div class="padding_5">
	    	<div class="border_status">
	        <div class="status_sprint">
	          <span>In Progess</span>
	          <span class="icon_add_issue button" ng-click="setParams(statusIds.status_inprogress,version.id)"><i class="fa fa-plus-circle"></i>Add</span>
	        </div>
	        <%= render :partial => "/s2b_issues/add_new_issue" %>
	        <div class="connectedSortable check_height" status="{{statusIds.status_inprogress}}" id="sortable2" sortable >
	        	<div class="issue ui-state-default small_mode" issue-id="{{issue.id}}" ng-repeat="issue in issuesInProgess">
              <%= render :partial => "/s2b_issues/issue" %>
            </div>
	        </div><!--end connectedSortable-->  
	      </div><!--end border status-->
	    </div><!--end padding 5 -->
	  </div><!--end sprint 2-->
	  <div class="s2b_column_4 hide_backlog">
	  	<div class="padding_5">
	    	<div class="border_status">
	        <div class="status_sprint">
	          <span>Resolved</span>
	        </div>
	        <div class="connectedSortable check_height" status="{{statusIds.status_completed}}" id="sortable3" sortable >
	          <div class="issue ui-state-default small_mode" issue-id="{{issue.id}}" ng-repeat="issue in issuesResolved">
              <%= render :partial => "/s2b_issues/issue" %>
            </div>
	        </div><!--end connectedSortable-->  
	      </div><!--end padding 5 -->
	    </div><!--end border status-->
	  </div><!--end sprint 3-->
	  <div class="s2b_column_3 issue_closed" id="issue_closed">
	    <div class="padding_5">
	    	<div class="border_status">
	      <div class="status_sprint">
	        <span>Close</span>
	        <span class="closed_issue button"><i class="fa fa-minus-circle"></i>Hide</span> 
	      </div>
	      <div class="connectedSortable check_height" status="{{statusIds.status_closed}}" id="sortable4" sortable >
	        <div class="issue ui-state-default small_mode" issue-id="{{issue.id}}" ng-repeat="issue in issuesClose">
              <%= render :partial => "/s2b_issues/issue" %>
            </div>
	      </div><!--end connectedSortable-->  
	      </div>
	    </div><!--end padding 5 -->
	  </div><!--end sprint 4-->
	  <div class="open_sprint_closed">
	    <span><i class="fa fa-angle-left fa-lg"></i> Open</span>
	  </div>
	</div>
</div>
