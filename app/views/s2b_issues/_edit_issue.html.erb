<div class="from_add_edit_issue from_edit_issue from_edit_issue_{{issue.id}} hide">
	<form ng-submit="editIssue()">
		<input type="hidden" ng-init="issue.id=issue.id" >
		<table >
			<tr>
				<td colspan="2"><input type="text" ng-model="issue.subject"  class="title_issue" required ></td>
			</tr>
			<tr>
				<td colspan="2">
					<textarea ng-model="issue.description" class="issue_description " placeholder="Enter the issue subject..."  ></textarea>
				</td>
			</tr>
			<tr>
				<td>
					<span>Tracker:</span>
					<select class="value_content" ng-model="issue.tracker_id">
						<option ng-repeat="tracker in trackers" value="{{tracker.id}}" ng-selected="tracker.id==issue.tracker_id">{{tracker.name}}</option>
					</select>
				</td>
				<td>
					<span>Priority:</span>
					<select class="value_content" ng-model="issue.priority_id">
						<option ng-repeat="priority in priorities" value="{{priority.id}}" ng-selected="priority.id==issue.priority_id">{{priority.name}}</option>
					</select>
				</td>
			</tr>
			<tr>
				<td>
					<span>Assign:</span>
					<select class="value_content" ng-model="issue.assigned_to_id">
						<option ng-repeat="member in members" value="{{member.id}}" ng-selected="member.id==issue.assigned_to_id">{{member.firstname}} {{member.lastname}}</option>
					</select>
				</td>
				<td>
					<span>Est. Hour:</span>
					<input type="text" ng-model="issue.estimated_hours" class="time">
				</td>
			</tr>
			<tr>
				<td>
					<span>Start: </span>
					<input type="date" ng-model="issue.start_date" class="begin">
				</td>
				<td >
					<span>Due to:</span>
					<input type="date" ng-model="issue.due_date" class="end">
				</td>
			</tr>
			<tr>
				<td colspan="2">
					<input type="submit" class="submit_issue" value="Submit	">
					<button type="button" class="cancel_edit_issue" issue_id='{{issue.id}}'>Cancel</button>
				</td>
			</tr>
		</table>
	</form>
</div><!--end add new issue -->